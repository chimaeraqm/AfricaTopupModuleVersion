<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/string_operator_expense"
        android:textColor="@color/colorBlue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/im_flag"
        app:layout_constraintStart_toEndOf="@+id/tv_postcode"
        app:layout_constraintTop_toTopOf="@+id/im_flag" />

    <ImageView
        android:id="@+id/im_flag"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/flag_egypt" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_carriers"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_activity_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_flag" />

    <TextView
        android:id="@+id/tv_banner_holder"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/string_adv_placeholder"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_activity_holder"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:text="@string/string_act_placeholder"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toTopOf="@+id/tv_banner_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="+20"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/im_flag"
        app:layout_constraintStart_toEndOf="@+id/im_flag"
        app:layout_constraintTop_toTopOf="@+id/im_flag" />
</android.support.constraint.ConstraintLayout>