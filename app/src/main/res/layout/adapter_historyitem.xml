<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_recharge_date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="date"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recharge_fee"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="fee"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:background="@color/colorTransOrange"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recharge_date"
        app:layout_constraintStart_toEndOf="@+id/tv_recharge_date"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_date" />

    <TextView
        android:id="@+id/tv_recharge_id"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="id"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recharge_fee"
        app:layout_constraintStart_toEndOf="@+id/tv_recharge_fee"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_fee" />

    <TextView
        android:id="@+id/tv_recharge_status"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="status"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:background="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recharge_id"
        app:layout_constraintStart_toEndOf="@+id/tv_recharge_id"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_id" />
</android.support.constraint.ConstraintLayout>