<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.crazydwarf.comm_library.view.MaterialEditText
        android:id="@+id/et_phonenumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:textSize="24sp"
        android:hint="@string/string_enter_phone_no"
        android:letterSpacing="0.1"
        android:paddingLeft="8dp"

        app:layout_constraintEnd_toStartOf="@+id/ib_used_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:met_maxCharacters="11"
        app:met_minCharacters="11"
        app:met_hideUnderline="true"
        app:met_primaryColor="@color/colorBlue"
        />

    <ImageButton
        android:id="@+id/ib_used_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_account_circle_blue_32dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_phonenumber" />

    <TextView
        android:id="@+id/tv_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/string_account_info"
        app:layout_constraintStart_toStartOf="@+id/et_phonenumber"
        app:layout_constraintTop_toBottomOf="@+id/et_phonenumber" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/string_recharge_amount"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_info" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.667" />

    <Button
        android:id="@+id/bn_recharge_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/string_recharge_10"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <Button
        android:id="@+id/bn_recharge_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/string_recharge_20"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bn_recharge_10"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/bn_recharge_10" />

    <Button
        android:id="@+id/bn_recharge_30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/string_recharge_30"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bn_recharge_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/bn_recharge_20" />

    <Button
        android:id="@+id/bn_recharge_50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/string_recharge_50"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_recharge_10" />

    <Button
        android:id="@+id/bn_recharge_100"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/string_recharge_100"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bn_recharge_50"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/bn_recharge_50" />

    <Button
        android:id="@+id/bn_recharge_200"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/string_recharge_200"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bn_recharge_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/bn_recharge_100" />

    <Button
        android:id="@+id/bn_recharge_300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/string_recharge_300"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_recharge_50" />

    <Button
        android:id="@+id/bn_recharge_500"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/string_recharge_500"
        android:textStyle="bold"
        android:textColor="@drawable/color_state_bn_text"
        android:background="@drawable/color_state_bn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bn_recharge_300"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/bn_recharge_300" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/string_more_recharge"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_recharge_300" />

    <Button
        android:id="@+id/bn_addflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:drawableTop="@drawable/ic_phonelink_ring_blue_32dp"
        android:text="@string/string_add_flow"
        android:background="@color/colorTransWhite"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

</android.support.constraint.ConstraintLayout>